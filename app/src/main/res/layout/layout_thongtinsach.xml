<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThongTin_Activity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_thongtinsach"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Thông Tin Chi Tiết"
        app:titleTextColor="@color/white"
        android:background="#915445">
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="right"
            android:layout_marginRight="15dp">
            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/menu_sl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right" />
            <ImageView
                android:id="@+id/img_thongtinsach_menu"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_shopping_cart" />
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_thongtinsach"
            android:layout_width="150sp"
            android:layout_height="200sp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id= "@+id/tv_thongtinsach_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên Sản Phẩm"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="15sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-10dp">
                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="Tác giả:"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id= "@+id/tv_thongtinsach_tacgia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Văn A"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:text="Giá:"
                    android:textSize="14dp"
                    android:textColor="#EE0014"
                    android:textStyle="bold"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="3sp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:id="@+id/tv_thongtinsach_gia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="300.000 VND"
                    android:textSize="14sp"
                    android:textColor="#EE0014"
                    android:textStyle="bold"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="3sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Lượng:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:paddingTop="10sp"
                    android:paddingBottom="10sp"
                    android:paddingEnd="10sp"
                    android:layout_gravity="left"/>
                <Spinner
                    android:id="@+id/spinner_thongtinsach_sl"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="10sp"
                    android:layout_marginEnd="3dp"
                    android:textAlignment="center"
                    android:background="@drawable/spinner"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_thongtinsach_mua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mua"
                android:textSize="15sp"
                android:textColor="#fff"
                android:backgroundTint="#915445"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông Tin Chi Tiết"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="20sp"
                    android:paddingLeft="5sp"
                    android:background="@color/backG"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tên Sách:"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:paddingLeft="10sp" />
                    <TextView
                        android:id="@+id/tv_thongtinsach_tenct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sức mạnh của sự tử tế"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:paddingLeft="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tác Giả:"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:paddingLeft="10sp" />
                    <TextView
                        android:id="@+id/tv_thongtinsach_tacgiact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Văn A"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:paddingLeft="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Số lượng:"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:paddingLeft="10sp" />
                    <TextView
                        android:id="@+id/tv_thongtinsach_soluongct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:paddingLeft="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Thể loại"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:paddingLeft="10sp" />
                    <TextView
                        android:id="@+id/tv_thongtinsach_theloaict"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kinh Tế"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:paddingLeft="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Giá:"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:paddingLeft="10sp" />
                    <TextView
                        android:id="@+id/tv_thongtinsach_giact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="300.000VND"
                        android:textSize="14sp"
                        android:textColor="#000"
                        android:paddingLeft="10sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô Tả Sách"
                    android:textSize="25sp"
                    android:textColor="#fff"
                    android:textStyle="bold|italic"
                    android:layout_marginTop="5sp"
                    android:paddingLeft="5sp"
                    android:background="@color/backG"/>
                <TextView
                    android:id="@+id/tv_thongtinsach_motachitiet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:text="mô tả sách rất là dài, à không phải là vô cùng dài ấy, cơ mà vẫn quá là ổn mô tả sách rất là dài, à không phải là vô cùng dài ấy, cơ mà vẫn quá là ổn"
                    android:textAlignment="gravity"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>