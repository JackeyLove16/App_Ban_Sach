<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal"
    android:weightSum="10"
    android:background="@drawable/border_black"
    android:padding="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <!-- adjustViewBounds chống vỡ ảnh -->
        <ImageView
            android:id="@+id/image_items_shoppingcart"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="15sp"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_items_shoppingcart_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sách"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"/>
        <TextView
            android:id="@+id/tv_items_shoppingcart_gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá sách"
            android:textColor="#E65555"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="5sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:id="@+id/checkbok_items_shoppingcart">
            </CheckBox>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner">
                <Button
                    android:id="@+id/btn_items_shoppingcart_tru"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:text=" - "
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="5sp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
                <TextView
                    android:id="@+id/tv_items_shoppingcart_soluong"
                    android:layout_width="80sp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/btn_items_shoppingcart_cong"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:layout_marginRight="5sp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>